!INCLUDE env.tmp
TARGET	= priv\sniff_winnt.dll
BUILD	= "$(BUILD_PATH)\lib\sniff\$(TARGET)"
SOURCES = src\sniff_winnt.c src\sniff.c

all: $(BUILD)

$(TARGET): $(SOURCES)
	cl /W4 /LD /MD /I"$(ERTS_HOME)\INCLUDE" /Fopriv/ /Fe$(TARGET) $(SOURCES)

$(BUILD): $(TARGET)
	copy $(TARGET) $(BUILD)

clean:
	del /q $(TARGET)
